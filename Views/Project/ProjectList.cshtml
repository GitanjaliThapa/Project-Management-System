@model List<Milestone3Project.Models.Project>

<h2>Projects</h2>

<table>
    <tr>
        <th>Project Name</th>
        <th>Project Status</th>
        <th>Actions</th>
    </tr>
    @foreach (var project in Model)
    {
        <tr>
            <td>@project.ProjectName</td>
            <td>@project.ProjectStatus</td>
            <td>
                <a href="@Url.Action("ProjectMilestones", "Project", new { projectId = project.ProjectID })">View Milestones</a>
            </td>
        </tr>
    }
</table>